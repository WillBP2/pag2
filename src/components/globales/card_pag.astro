---
const {h3, p} = Astro.props
---

<article class="article_sintesis">
    <div class="article_sintesis_div1">
        <h3>{h3}</h3>
        <p set:html={p}></p>
    </div>
</article>
<style>
        .article_sintesis {
        display: flex;
        flex-direction: column;
        gap: 25px;
        
     
    }
    .article_sintesis_div1 {
        padding: 25px;
        background-color: #111111;
        border-radius: 10px;
        color: #bfc1c6e0;
        letter-spacing: 1px;
		line-height: 1.4;
    }
    h3 {
        margin-bottom: 25px;
    }
</style>