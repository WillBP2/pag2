---

const {titulo_i, img_i, parrafo_i} = Astro.props
---

<article class="article1">
            <h1 class="article1-h1">{titulo_i}</h1>
            <img src={img_i} alt="" class="img-inicio" />
            <p class="article1-p">{parrafo_i}
            </p>
</article>

<style>
      .article1 {
        display: flex;
        flex-direction: column;
        gap: 30px;
        text-align: center;
    }
    .article1-h1 {
        color: #fff;
    }
    .article1-p {
        font-weight: 300;
        color: #bfc1c6e0;
    }
    main {
        padding: 20px;
    }
    .img-inicio {
        border-radius: 10px;
    }
</style>